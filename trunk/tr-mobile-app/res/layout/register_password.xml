<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:paddingLeft="8dp"
    android:paddingTop="8dp" >

    <TextView
        android:id="@+id/register_password_label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/register_password_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/register_password_layout_passwords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_password_label_title"
        android:layout_below="@+id/register_password_label_title"
        android:orientation="vertical"
        android:paddingTop="8dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_password_description" />

        <EditText
            android:id="@+id/register_password_password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/register_password_label_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_password_repeat" />

        <EditText
            android:id="@+id/register_password_password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password_layout_passwords"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/register_password_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_cancel" />

        <Button
            android:id="@+id/register_password_button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_next" />

    </LinearLayout>

</RelativeLayout>