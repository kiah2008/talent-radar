<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background" >

    <LinearLayout
        android:id="@+id/login_centering_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="48dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/login_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="256dp"
                android:layout_height="128dp"
                android:contentDescription="Logo"
                android:scaleType="fitCenter"
                android:src="@drawable/login_application_logo" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_layout_linkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/login_label_login_with_linkedin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_button_linkedin"
                android:layout_centerHorizontal="true"
                android:text="@string/login_label_login_with_linkedin"
                android:textColor="@android:color/primary_text_dark"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageButton
                android:id="@+id/login_button_linkedin"
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:layout_below="@+id/login_layout_title"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/login_linked_in" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_button_normal_login"
        style="?android:attr/buttonStyleSmall"
        android:background="@drawable/radar_list_handle"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="6dp"
        android:textColor="@android:color/primary_text_dark"
        android:text="Ingresar con usuario Talent Radar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/tr_dark_light"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>