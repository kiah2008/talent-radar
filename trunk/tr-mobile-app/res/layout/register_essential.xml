<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/register_label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/register_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/register_label_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/register_label_title"
            android:layout_below="@+id/register_label_title"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/register_description" />

        <LinearLayout
            android:id="@+id/register_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/register_label_title"
            android:layout_below="@+id/register_label_description"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/register_label_realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/register_label_title"
                android:text="@string/register_name"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/register_realname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/register_label_realname"
                android:ems="10"
                android:inputType="textPersonName" />

            <CheckBox
                android:id="@+id/register_checkbox_public_realname"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="@string/register_label_public_data" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/register_label_title"
            android:layout_below="@+id/register_layout_name"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/register_label_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/register_realname"
                android:text="@string/register_label_email"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/register_label_nickname"
                android:ems="10" android:bufferType="normal" android:inputType="textEmailAddress"/>

            <CheckBox
                android:id="@+id/register_checkbox_public_email"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="@string/register_label_public_data" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_layout_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/register_label_title"
            android:layout_below="@+id/register_layout_email"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/register_label_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/register_realname"
                android:text="@string/register_nickname"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/register_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/register_label_nickname"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_layout_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_layout_nickname"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/register_button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_cancel" />

            <Button
                android:id="@+id/register_button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_next" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>